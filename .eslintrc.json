{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "es6": true,
    "jest": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "curly": ["error", "all"],
    "func-names": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "require-await": "error",
    "import/no-extraneous-dependencies": "off",
    "newline-per-chained-call": [2, { "ignoreChainWithDepth": 3 }]
  }
}
